@model HotelApp.Web.ViewModels.Booking.DeleteBookingViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 bg-dark text-light p-4 rounded">
                <div class="row">

                    <div class="col-md-8">
                        <h2 class="fw-bold text-primary mb-3">Booking Details</h2>

                        <h6 class="card-title">Booking Id:</h6>
                        <h6 class="card-title">@Model.Id</h6>

                        <p class="fs-5">
                            Are you sure you want to delete this booking?
                        </p>

                        <p>Created On: @(Model.CreatedOn.HasValue ? Model.CreatedOn.Value.ToString("yyyy-MM-dd HH:mm") : "-")</p>
                        <p>Arrival Date: @(Model.DateArrival.HasValue ? Model.DateArrival.Value.ToString("yyyy-MM-dd") : "-")</p>
                        <p>Departure Date: @(Model.DateDeparture.HasValue ? Model.DateDeparture.Value.ToString("yyyy-MM-dd") : "-")</p>
                        
                        <p>Room: @Model.RoomName</p>

                        <p>Adults: @Model.AdultsCount</p>
                        <p>Children: @Model.ChildCount</p>
                        <p>Babies: @Model.BabyCount</p>
                        
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-danger fw-bold px-4 rounded-pill">
                                    <i class="bi bi-trash"></i> Confirm
                                </button>

                                <a asp-action="Details"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-outline-light fw-bold px-4 rounded-pill">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
