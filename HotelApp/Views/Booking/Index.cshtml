@using HotelApp.Web.ViewModels.Booking
@model IEnumerable<AllBookingsIndexViewModel>

@{
    ViewData["Title"] = "All Bookings";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row text-center">
    @foreach (var booking in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">

                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">Booking Id:</h6>
                    <h6 class="card-title">@booking.Id</h6>

                    <hr />
                   
                    <p>Room: @booking.Room</p>
                    <p>Created On: @booking.CreatedOn.ToString("yyyy-MM-dd HH:mm")</p>
                    <p>Arrival Date: @booking.DateArrival.ToString("yyyy-MM-dd")</p>
                    <p>Departure Date: @booking.DateDeparture.ToString("yyyy-MM-dd")</p>
                    <p>Adults: @booking.AdultsCount</p>
                    <p>Children: @booking.ChildCount</p>
                    <p>Babies: @booking.BabyCount</p>

                    <div class="d-flex justify-content-between mt-auto">
                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info w-100">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
