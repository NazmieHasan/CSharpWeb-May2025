@model HotelApp.Web.ViewModels.Room.DeleteRoomViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 bg-dark text-light p-4 rounded">
                <div class="row">

                    <div class="col-md-8">
                        <h3 class="text-warning fw-bold mb-3">@Model.Name</h3>

                        <p class="fs-5">
                            Are you sure you want to delete this room?
                        </p>

                        <p class="fs-5">@Model.CategoryName</p>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-danger fw-bold px-4 rounded-pill">
                                    <i class="bi bi-trash"></i> Confirm
                                </button>

                                <a asp-action="Details"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-outline-light fw-bold px-4 rounded-pill">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


