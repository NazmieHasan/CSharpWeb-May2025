@using HotelApp.Web.ViewModels.Room
@model IEnumerable<AllRoomsIndexViewModel>

@{
    ViewData["Title"] = "All Rooms";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row text-center">
    @foreach (var room in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@room.Name</h5>
                    <p class="card-text">Category: @room.Category</p>
                    
                    <div class="d-flex justify-content-between mt-auto">
                        <a asp-controller="Room" asp-action="Details" asp-route-id="@room.Id" class="btn btn-info w-100">
                                <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
