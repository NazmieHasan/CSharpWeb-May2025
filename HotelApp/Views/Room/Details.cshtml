@using HotelApp.Web.ViewModels.Room
@model RoomDetailsViewModel

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            
        </div>
        <div class="col-md-7">
            <h2 class="fw-bold text-primary mb-3">@Model.Name</h2>
            <p><strong>Category:</strong> @Model.Category</p>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Index"
                   asp-controller="Room"
                   class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
                    <i class="bi bi-arrow-left-circle"></i> Back to All Rooms
                </a>

                @if (this.User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-controller="Room"
                       asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <a asp-controller="Room"
                       asp-action="Delete"
                       asp-route-id="@Model.Id"
                       class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                }
            </div>

        </div>
    </div>
</div>