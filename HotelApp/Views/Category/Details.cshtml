@using HotelApp.Web.ViewModels.Category
@model CategoryDetailsViewModel

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl"
            class="img-fluid rounded shadow"
            alt="@Model.Name">
        </div>
        <div class="col-md-7">
            <h2 class="fw-bold text-primary mb-3">@Model.Name</h2>

            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Beds Count:</strong> @Model.Beds</p>
            <hr />
            <h5 class="mt-3">Description</h5>
            <p>@Model.Description</p>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Index"
                asp-controller="Category"
                class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
                    <i class="bi bi-arrow-left-circle"></i> Back to All Categories
                </a>

                @if (this.User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-controller="Category"
                    asp-action="Edit"
                    asp-route-id="@Model.Id"
                    class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <a asp-controller="Category"
                    asp-action="Delete"
                    asp-route-id="@Model.Id"
                    class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                }
            </div>

        </div>
    </div>
</div>

