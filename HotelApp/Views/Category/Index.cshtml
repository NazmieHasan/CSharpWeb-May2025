@using HotelApp.Web.ViewModels.Category
@model IEnumerable<AllCategoriesIndexViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-light fw-bold">Explore Rooms</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Home Page
        </a>
    </div>

    <div class="d-flex flex-column gap-2">
        @foreach (AllCategoriesIndexViewModel category in Model)
        {
            <div class="card shadow-lg border-0 rounded-3 d-flex flex-row align-items-center p-2"
                 style="height: 140px; max-height: 140px;">
                <img src="@category.ImageUrl" class="rounded"
                     alt="@category.Name"
                     style="width: 100px; height: 130px; object-fit: cover;">
                <div class="card-body ms-3 p-2 text-light" style="flex-grow: 1;">
                    <h6 class="fw-bold mb-1 text-dark">@category.Name</h6>
                    <p class="text-muted mb-0" style="font-size: 0.85rem;">
                        <strong>Beds Count:</strong> @category.Beds |
                        <strong>Price:</strong> $@category.Price
                    </p>
                </div>
                <div class="me-3 d-flex gap-2">
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id"
                       class="btn btn-primary btn-sm rounded-pill px-4 fw-bold">
                        <i class="fas fa-eye">View Details</i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/user.css">
}