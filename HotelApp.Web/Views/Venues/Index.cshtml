@{
    ViewData["Title"] = "Venues";
}

<section class="venues venues-width header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="header-title text-center">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</section>
<div class="container venue text-center">
    <div class="row">
        <div class="col-md-6 col-sm-12 venues-img">
            <img src="~/images/outdoor-restaurant.jpg" alt="img" class="img-thumbnail">
        </div>
        <div class="col-md-6 col-sm-12 venues-text">
            <div class="venues-info">
                <h4>OUTDOOR RESTAURANT</h4>
                <hr />
                <p>The restaurant has 150 seats. Welcome!</p>
                <h5>Breakfast: 07:30 - 10:30</h5>
                <h5>Lunch: 12:30 - 14:30</h5>
                <h5>Dinner: 18:30 - 21:30</h5>
            </div>
        </div>
    </div>
</div>
<div class="container venue text-center">
    <div class="row">
        <div class="col-md-6 col-sm-12 venues-text">
            <div class="venues-info">
                <h4>RESTAURANT</h4>
                <hr />
                <p>The restaurant has 300 seats. Welcome!</p>
                <h5>Breakfast: 07:30 - 10:30</h5>
                <h5>Lunch: 12:30 - 14:30</h5>
                <h5>Dinner: 18:30 - 21:30</h5>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 venues-img">
            <img src="~/images/restaurant.jpg" alt="img" class="img-thumbnail">
        </div>
    </div>
</div>
<div class="container-fluid cont-venues text-center">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1>Cafe and bar</h1>
        </div>
    </div>
</div>
<div class="container venue text-center">
    <div class="row">
        <div class="col-md-6 col-sm-12 venues-img">
            <img src="~/images/cafe.jpg" alt="img" class="img-thumbnail">
        </div>
        <div class="col-md-6 col-sm-12 venues-text">
            <div class="venues-info">
                <h4>CAFE</h4>
                <hr />
                <p>It offers a variety of drinks, cocktails and pastries.</p>
                <p>The cafe has 100 seats. Welcome!</p>
                <h5>Work time: 07:00 - 21:00</h5>
            </div>
        </div>
    </div>
</div>
<div class="container venue text-center">
    <div class="row">
        <div class="col-md-6 col-sm-12 venues-text">
            <div class="venues-info">
                <h4>BAR</h4>
                <hr />
                <p>It offers a variety of drinks, cocktails and pastries.</p>
                <p>The bar has 100 seats. Welcome!</p>
                <h5>Work time: 10:30 - 23:30</h5>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 venues-img">
            <img src="~/images/bar.jpg" alt="img" class="img-thumbnail">
        </div>
    </div>
</div>