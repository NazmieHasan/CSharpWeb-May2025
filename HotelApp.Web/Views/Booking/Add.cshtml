@using HotelApp.Web.ViewModels.Booking
@model AddBookingInputModel

@{
    ViewData["Title"] = "Create Booking";
}

<div class="container mt-5 mb-5">
    <div class="row col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="mb-3 text-center">
            <h2 class="mb-1">@ViewData["Title"]</h2>
            <h5 class="mb-1">@Model.RoomCategoryName</h5>
            <h5 class="mb-1">@Model.DateArrival – @Model.DateDeparture</h5>
            <h5>Total Amount: $@Model.TotalPrice.ToString("0.00")</h5>
        </div>

        <form asp-controller="Booking" asp-action="Add" method="post">
            <div class="row">

                <input type="hidden" asp-for="RoomId" />
                <input type="hidden" asp-for="DateArrival" />
                <input type="hidden" asp-for="DateDeparture" />

                <div class="mb-3">
                    <label asp-for="AdultsCount" class="form-label"></label>
                    <select asp-for="AdultsCount" class="form-control">
                        <option value="0" selected>Please Select</option>
                        @for (int i = 1; i <= Model.MaxGuests; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="AdultsCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ChildCount" class="form-label"></label>
                    <select asp-for="ChildCount" class="form-control" id="childCountSelect">
                        <option value="0" selected>Please Select</option>
                        @for (int i = 0; i <= Model.MaxGuests - Model.AdultsCount; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="ChildCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BabyCount" class="form-label"></label>
                    <select asp-for="BabyCount" class="form-control" id="babyCountSelect">
                        <option value="0" selected>Please Select</option>
                        @for (int i = 1; i <= Model.MaxGuests - Model.AdultsCount - Model.ChildCount + 1; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="BabyCount" class="text-danger"></span>
                </div>
                
            </div>

            <div class="mb-2">
                <button class="btn btn-danger w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/booking.js"></script>
    <script>
        initBookingGuestSelectors(@Model.MaxGuests);
    </script>
}