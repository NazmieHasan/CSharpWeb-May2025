@using System.Security.Claims
@inject HotelApp.Services.Core.Interfaces.IManagerService managerService

@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (2025 == currentYear) ? $"{currentYear}" : $"{2025} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/hotel-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        <partial name="_NotificationsPartial" />
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height:40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-4">
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Venues" asp-action="Index">Venues</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="SpaAndWellness" asp-action="Index">SPA & Wellness</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Offers" asp-action="Index">Offers</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            @if (await managerService.ExistsByUserIdAsync(User.FindFirstValue(ClaimTypes.NameIdentifier)))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Manager" asp-action="Index">
                                        Front Office Manager
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" id="manageDropdown"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        ADMIN
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark border-0">
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                                D A S H B O A R D
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="BookingManagement" asp-action="Index">
                                                Manage Bookings
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="BookingRoomManagement" asp-action="Index">
                                                Manage Booking Rooms
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="CategoryManagement" asp-action="Index">
                                                Manage Categories
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="GuestManagement" asp-action="Index">
                                                Manage Guests
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="ManagerManagement" asp-action="Index">
                                                Manage Managers
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="PaymentManagement" asp-action="Index">
                                                Manage Payments
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="PaymentMethodManagement" asp-action="Index">
                                                Manage Payment Methods
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="RoomManagement" asp-action="Index">
                                                Manage Rooms
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="StatusManagement" asp-action="Index">
                                                Manage Statuses
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="StayManagement" asp-action="Index">
                                                Manage Stays
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">
                                                Manage Users
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5>Call us</h5>
                    <p>Info <i class="bi bi-telephone"></i> (+359) 000 000 001</p>
                    <p>Reservations <i class="bi bi-telephone"></i> (+359) 000 000 002</p>
                </div>
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5>Write us</h5>
                    <p>Info: <i class="bi bi-envelope"></i> info@example.com</p>
                    <p>Reservations: <i class="bi bi-envelope"></i> reservations@example.com</p>
                </div>
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5>Follow us</h5>
                    <i class="fab fa-facebook-f text-white fs-2 me-2"></i>
                    <i class="fab fa-instagram text-white fs-2 me-2"></i>
                    <i class="fab fa-twitter text-white fs-2"></i>
                </div>
            </div>
            <hr />
            <p class="small">&copy; @footerNote Hotel & SPA. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>