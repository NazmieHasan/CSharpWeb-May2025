@using HotelApp.Web.ViewModels.Room
@model FindRoomInputModel

<div class="search-room text-center">
    <div class="container">
        <form asp-controller="Home" asp-action="FindRoom" method="get">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12 col-title">
                        <span>BOOK ONLINE</span>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                        <label asp-for="DateArrival"></label>
                        <input asp-for="DateArrival" class="input-date" type="date" />
                        <span asp-validation-for="DateArrival" class="text-danger"></span>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                        <label asp-for="DateDeparture"></label>
                        <input asp-for="DateDeparture" class="input-date" type="date" />
                        <span asp-validation-for="DateDeparture" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2 col-md-12 col-sm-12 col-sx-12">
                        <button type="submit" class="btn btn-danger form-submit">SEARCH ROOM</button>
                    </div>
                </div>
            </div>
        </form>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mt-3 alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

    </div>
</div>