@model HotelApp.Web.ViewModels.Room.FindRoomInputModel

<div class="container mt-5 mb-5">
    <div class="row col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h3 class="mt-5 mb-3 text-center">Search Room</h3>
        <form asp-controller="Home" asp-action="FindRoomByCategory" method="post">
            <input type="hidden" asp-for="CategoryId" />

                <div class="row">
                    <div class="mt-3 mb-3">
                        <label asp-for="DateArrival" class="form-label">Date Arrival</label>
                        <input asp-for="DateArrival" class="form-control" type="date" />
                        <span asp-validation-for="DateArrival" class="text-danger"></span>
                    </div>
                    <div class="mt-3 mb-3">
                        <label asp-for="DateDeparture" class="form-label">Date Departure</label>
                        <input asp-for="DateDeparture" class="form-control" type="date" />
                        <span asp-validation-for="DateDeparture" class="text-danger"></span>
                    </div>
                    <div class="mt-3 mb-5">
                        <button type="submit" class="btn btn-danger w-100 py-2 fw-bold rounded form-submit">Search</button>
                    </div>
                </div>
        </form>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mt-3 mb-5 alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

    </div>
</div>

@section Scripts {
}

@section Styles {
    <link rel="stylesheet" href="~/css/user.css">
}