@{
    ViewData["Title"] = "Contact";
}

<section class="contact contact-width header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="header-title text-center">Hotel Beach</h1>
            </div>
        </div>
    </div>       
</section>
<div class="container location">
    <div class="row">
        <div class="col-md-6 col-sm-12 col1">
            <h1>Location</h1>
            <p>Our beach is a popular destination in the area. It is located close to the main city and offers a picturesque and environmentally clean bay. The resort is nestled within beautiful natural surroundings, providing a unique combination of sea, forest, and fresh air.</p>
        </div>
        <div class="col-md-6 col-sm-12 col2">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Contact us and you will receive:</li>
                <li class="list-group-item"><i class="fa fa-check" aria-hidden="true"></i> Accommodation in rooms and apartments</li>
                <li class="list-group-item"><i class="fa fa-check" aria-hidden="true"></i> Modern restaurants and bars</li>
                <li class="list-group-item"><i class="fa fa-check" aria-hidden="true"></i> Relax Zone in SPA & Wellness center</li>
            </ul>
        </div>
    </div>        
</div>
<div class="container contact-info">  
    <div class="row text-center">
        <!-- Call us -->
        <div class="col-md-4 col-sm-12 mb-4">
            <div class="jumbo-dark rounded p-4">
                <h2>Call us</h2>
                <div class="phone p-3 border border-white bg-danger text-white">
                    <h5>For info</h5>
                    <p class="hr-before"><i class="bi bi-envelope"></i> (+359) 000 000 001</p>
                    <hr />
                    <h5 class="hr-after">For reservations</h5>
                    <p><i class="bi bi-envelope"></i> (+359) 000 000 002</p>
                </div>
            </div>
        </div>

        <!-- Follow us -->
        <div class="col-md-4 col-sm-12 mb-4">
            <div class="jumbo-light rounded p-4">
                <h2>Follow us</h2>
                <h5>In Social Media</h5>
                <div class="row">
                    <div class="col">
                        <img src="/images/facebook.png" alt="Facebook" class="img-thumbnail">
                    </div>
                    <div class="col">
                        <img src="/images/instagram.png" alt="Instagram" class="img-thumbnail">
                    </div>
                    <div class="col">
                        <img src="/images/twitter.png" alt="Twitter" class="img-thumbnail">
                    </div>
                </div>
            </div>
        </div>

        <!-- Write us -->
        <div class="col-md-4 col-sm-12 mb-4">
            <div class="jumbo-dark rounded p-4">
                <h2>Write us</h2>
                <div class="email p-3 border border-white bg-danger text-white">
                    <h5>For info</h5>
                    <p class="hr-before"><i class="bi bi-telephone"></i> info@example.com</p>
                    <hr />
                    <h5 class="hr-after">For reservations</h5>
                    <p><i class="bi bi-telephone"></i> reservations@example.com</p>
                </div>
            </div>
        </div>      
    </div>
</div>
<div class="container gps-coordinates">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <img src="~/images/world-map.png" alt="img" class="img-thumbnail">
        </div>
        <div class="col-md-6 col-sm-12">
            <h4>GPS Coordinates</h4>
            <hr />
            <h5>Bulgaria</h5>
            <p>UTM COORDINATES: 35T 375825.52296821 4731391.6579246</p>
            <hr />
            <h5>Golden Sands</h5>
            <p>UTM COORDINATES: 35T 584241.82039909 4792913.5733866</p>
            <hr />
        </div>
    </div>
</div>
