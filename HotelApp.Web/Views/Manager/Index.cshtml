@using HotelApp.Web.ViewModels.Manager
@using Microsoft.AspNetCore.Identity
@model IEnumerable<ManagerBookingsIndexViewModel>

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-5 text-danger fw-bold">Front Office Manager</h1>
    <h3 class="text-center mt-3 mb-5 text-danger fw-bold">Booking Management</h3>

    <div class="table-responsive mb-5">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning text-center">
                    <th>#</th>
                    <th>Created On</th>
                    <th>User</th>
                    <th>Manager</th>
                    <th>Is Deleted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td class="align-middle">@booking.Id</td>
                        <td class="align-middle">@booking.CreatedOn.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@booking.UserEmail</td>
                        <td class="align-middle">@booking.ManagerEmail</td>
                        <td class="align-middle">@booking.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="BookingDetails" asp-route-id="@booking.Id" class="btn btn-success btn-sm fw-bold">
                                    <i class="bi bi-eye-square me-1"></i>Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

