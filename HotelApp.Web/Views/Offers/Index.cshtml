@{
    ViewData["Title"] = "Offers";
}

<section class="offers offers-width header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="header-title text-center">Offers</h1>
            </div>
        </div>
    </div>        
</section>
<div class="container header-offers">
    <div class="row">
        <div class="col-md-8 offset-md-2 pt-5 pb-5 text-center bg-white">
            <p>Enjoy the beauty of summer with our special package.</p>
            <p>Stay for 3 nights and get the 4th night free.</p>
            <p>Includes complimentary breakfast and a welcome drink.</p>
            <p>Book your summer getaway early and save 25% on your stay.</p>
            <p>Offer valid for bookings made at least 30 days in advance.</p>
        </div>
    </div>
</div>
<div class="container-fluid offers1-container">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 col-img">
                <img src="~/images/offer-early-booking.jpg" alt="img" class="img-thumbnail">
            </div>
            <div class="col-md-5 col-sm-12 col-text">
                <div class="offers-info text-left">
                    <h4>Summer 2026 in Hotel & SPA</h4>
                    <p>June 2026 - August 2026</p>
                    <p>Early bookings with up to -25% discount</p>
                    <p><a asp-controller="Contact" asp-action="Index">For info and reservation</a></p>
                </div>
            </div>
        </div>
    </div>
</div>        
