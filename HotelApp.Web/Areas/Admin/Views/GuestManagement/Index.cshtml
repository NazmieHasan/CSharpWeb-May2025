@using HotelApp.Web.ViewModels.Admin.GuestManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<GuestManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

@{
    ViewData["Title"] = "Guest Management";

    int currentPage = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int guestCounter = ((currentPage - 1) * pageSize) + 1;
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Guest
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning">
                    <th>#</th>
                    <th>Name</th>
                    <th>Family</th>
                    <th>Phone</th>
                    <th>Is Deleted</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guest in Model)
                {
                    <tr>
                        <td class="align-middle">@guestCounter</td>
                        <td class="align-middle">@guest.FirstName</td>
                        <td class="align-middle">@guest.FamilyName</td>
                        <td class="align-middle">@guest.PhoneNumber</td>
                        <td class="align-middle">@guest.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@guest.Id" class="btn btn-success btn-sm fw-bold" target="_blank">
                                    <i class="bi bi-eye square"></i> Details
                                </a>
                                @if (!guest.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@guest.Id" class="btn btn-primary btn-sm fw-bold" target="_blank">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }
                                <a asp-action="ToggleDelete" asp-route-id="@guest.Id" class="btn @(guest.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold">
                                    <i class="bi @(guest.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(guest.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                    guestCounter++;
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("_PaginationPartial", (currentPage, totalPages, "Index", "GuestManagement"))
    <p class="text-center mt-2">Page @currentPage of @totalPages</p>

</div>

