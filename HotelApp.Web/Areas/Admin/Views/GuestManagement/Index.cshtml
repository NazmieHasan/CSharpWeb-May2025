@using HotelApp.Web.ViewModels.Admin.GuestManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<GuestManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">Guest Management</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Guest
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning text-center">
                    <th>#</th>
                    <th>Name</th>
                    <th>Family</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guest in Model)
                {
                    <tr>
                        <td class="align-middle">@guest.Id</td>
                        <td class="align-middle">@guest.FirstName</td>
                        <td class="align-middle">@guest.FamilyName</td>
                        <td class="align-middle">@guest.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

