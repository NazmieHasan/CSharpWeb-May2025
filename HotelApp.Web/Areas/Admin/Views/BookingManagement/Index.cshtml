@using HotelApp.Web.ViewModels.Admin.BookingManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<BookingManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

@{
    ViewData["Title"] = "Booking Management";

    int currentPage = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10; 
    int bookingCounter = ((currentPage - 1) * pageSize) + 1;
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Search" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-search"></i> Search Booking
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning">
                    <th>#</th>
                    <th>Created On</th>
                    <th>Arrival Date</th>
                    <th>Departure Date</th>
                    <th>Status</th>
                    <th>Is Deleted</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td class="align-middle">@bookingCounter</td>
                        <td class="align-middle">@booking.CreatedOn.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@booking.DateArrival.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@booking.DateDeparture.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@booking.Status</td>
                        <td class="align-middle">@booking.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-success" target="_blank">
                                    <i class="bi bi-eye square"></i> Details
                                </a>
                                @if (!booking.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-primary" target="_blank">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }
                                <a asp-action="ToggleDelete" asp-route-id="@booking.Id" class="btn @(booking.IsDeleted ? "btn-warning" : "btn-danger")">
                                    <i class="bi @(booking.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(booking.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                    bookingCounter++;
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("_PaginationPartial", (currentPage, totalPages, "Index", "BookingManagement"))
    <p class="text-center mt-2">Page @currentPage of @totalPages</p>

</div>
