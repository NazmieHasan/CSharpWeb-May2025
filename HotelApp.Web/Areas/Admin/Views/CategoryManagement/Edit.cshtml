@using HotelApp.Web.ViewModels.Admin.CategoryManagement
@model CategoryManagementFormInputModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <h2 class="text-center text-warning fw-bold">Edit category</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-dark text-light p-4 rounded shadow-lg">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Beds" class="form-label fw-bold">Beds count</label>
                    <input asp-for="Beds" class="form-control" type="number" placeholder="Enter beds count">
                    <span asp-validation-for="Beds" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div>
                            <img src="@Model.ImageUrl" alt="Category Image" style="max-width:212px; max-height:250px;">
                        </div>
                    }
                </div>
                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-bold">Upload New Image (optional)</label>
                    <input asp-for="Image" type="file" class="form-control">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary fw-bold px-4">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-area="Admin" asp-controller="CategoryManagement" asp-action="Index" class="btn btn-outline-light ms-2">
                        <i class="bi bi-arrow-left"></i> Back to All Categories
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
