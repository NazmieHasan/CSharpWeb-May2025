@using HotelApp.Web.ViewModels.Admin.CategoryManagement
@model CategoryManagementDetailsViewModel

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl"
            class="img-fluid rounded shadow"
            alt="@Model.Name">
        </div>
        <div class="col-md-7">
            <h2 class="fw-bold text-primary mb-3">@Model.Name</h2>

            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Beds Count:</strong> @Model.Beds</p>
            <hr />
            <h5 class="mt-3">Description</h5>
            <p>@Model.Description</p>
            <p>Is Deleted: @Model.IsDeleted</p>
            <hr />

            <h4 class="mt-4">Rooms in this category</h4>
            @if (Model.Rooms.Any())
            {
                <p>
                    @foreach (var room in Model.Rooms)
                    {
                        <a asp-area="Admin"
                           asp-controller="RoomManagement"
                           asp-action="Details"
                           asp-route-id="@room.Id"
                           class="link-primary text-decoration-none"
                           target="_blank">
                            @room.Name
                        </a>
                        @: &nbsp;
                    }
                </p>
            }
            else
            {
                <p>No rooms in this category.</p>
            }

            <div class="mt-4 mb-5">
                <a asp-action="Index" class="btn btn-outline-primary ms-2">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

        </div>
    </div>
</div>

