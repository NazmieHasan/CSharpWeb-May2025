@using HotelApp.Web.ViewModels.Admin.BookingRoomManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<BookingRoomManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

@{
    ViewData["Title"] = "Booking Rooms Management";

    int currentPage = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int bookingRoomCounter = ((currentPage - 1) * pageSize) + 1;
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="mt-4 text-center">
            Sorry, no booking rooms found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover shadow-lg rounded-3">
                <thead class="thead-dark">
                    <tr class="text-warning">
                        <th>#</th>
                        <th>Booking Id</th>
                        <th>Booking Created On</th>
                        <th>Room Id</th>
                        <th>Booking Room Status</th>
                        <th>Is Deleted</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bookingRoom in Model)
                    {
                        <tr>
                            <td class="align-middle">@bookingRoomCounter</td>
                            <td class="align-middle">
                                <a class="text-light" asp-controller="BookingManagement" asp-action="Details" asp-route-id="@bookingRoom.BookingId" target="_blank">
                                    View Booking
                                </a>
                            </td>
                            <td class="align-middle">@bookingRoom.CreatedOn.ToString("yyyy-MM-dd")</td>
                            <td class="align-middle">
                                <a class="text-light" asp-controller="RoomManagement" asp-action="Details" asp-route-id="@bookingRoom.RoomId" target="_blank">
                                    View Room
                                </a>
                            </td>
                            <td class="align-middle">@bookingRoom.Status</td>
                            <td class="align-middle">@bookingRoom.IsDeleted</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@bookingRoom.Id" class="btn btn-success" target="_blank">
                                        <i class="bi bi-eye square"></i> Details
                                    </a>
                                    @if (!bookingRoom.IsDeleted)
                                    {
                                        <a asp-action="Edit" asp-route-id="@bookingRoom.Id" class="btn btn-primary" target="_blank">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                    }
                                    <a asp-action="ToggleDelete" asp-route-id="@bookingRoom.Id" class="btn @(bookingRoom.IsDeleted ? "btn-warning" : "btn-danger")">
                                        <i class="bi @(bookingRoom.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                        @(bookingRoom.IsDeleted ? "Restore" : "Delete")
                                    </a>
                                </div>
                            </td>
                        </tr>
                        bookingRoomCounter++;
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("_PaginationPartial", (currentPage, totalPages, "Index", "BookingRoomManagement"))
        <p class="text-center mt-2">Page @currentPage of @totalPages</p>
    }

</div>
