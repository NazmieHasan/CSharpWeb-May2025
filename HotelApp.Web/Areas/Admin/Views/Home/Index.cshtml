                    <p class="card-text text-muted">Add new room, edit details, or remove them.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="RoomManagement" asp-action="Index"
                           class="btn btn-danger fw-bold shadow-sm w-100 py-2">
                            <i class="bi bi-play-btn-fill"></i> Go to Rooms
                        </a>
