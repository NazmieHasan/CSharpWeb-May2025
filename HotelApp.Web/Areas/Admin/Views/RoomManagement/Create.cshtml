@using HotelApp.Web.ViewModels.Admin.RoomManagement
@model AddRoomManagementInputModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-area="Admin" asp-controller="RoomManagement" asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Room Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
                    <select asp-for="@Model.CategoryId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                        <option value="">Please SeLect</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
          
                <div class="text-center mt-4">
                    <button class="btn btn-warning btn-dark-text px-4 fw-bold rounded" type="submit">
                        Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark ms-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>