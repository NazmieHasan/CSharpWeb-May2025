@using HotelApp.Web.ViewModels.Admin.RoomManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<RoomManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

@{
    ViewData["Title"] = "Room Management";

    int currentPage = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int roomCounter = ((currentPage - 1) * pageSize) + 1;
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Room
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning">
                    <th>#</th>
                    <th>Name</th>
                    <th>Is Deleted</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td class="align-middle">@roomCounter</td>
                        <td class="align-middle">@room.Name</td>
                        <td class="align-middle">@room.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-success btn-sm fw-bold">
                                    <i class="bi bi-eye square"></i>Details
                                </a>
                                @if (!room.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-primary btn-sm fw-bold">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }
                                <a asp-action="ToggleDelete" asp-route-id="@room.Id" class="btn @(room.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold">
                                    <i class="bi @(room.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(room.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                    roomCounter++;
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("_PaginationPartial", (currentPage, totalPages, "Index", "RoomManagement"))
    <p class="text-center mt-2">Page @currentPage of @totalPages</p>

</div>


