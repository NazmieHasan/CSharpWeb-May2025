@using HotelApp.Web.ViewModels.Admin.RoomManagement
@model RoomManagementDetailsViewModel

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="fw-bold mb-3">@ViewData["Title"]</h1>
            <hr />
            <h2 class="mb-3">@Model.Name</h2>
            <p>
                <a asp-area="Admin"
                   asp-controller="CategoryManagement"
                   asp-action="Details"
                   asp-route-id="@Model.CategoryId"
                   class="link-primary text-decoration-none"
                   target="_blank">
                   @Model.Category
                </a>
            </p>
            <p>Category Beds: @Model.CategoryBeds</p>
            <p>Is Deleted: @Model.IsDeleted</p>

            <h3 class="mt-4">Bookings</h3>

            @if (Model.Bookings != null && Model.Bookings.Any())
            {
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Created On</th>
                            <th>Date Arrival</th>
                            <th>Date Departure</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Bookings)
                        {
                            <tr>
                                <td>@booking.BookingId</td>
                                <td>@booking.CreatedOn.ToString("yyyy-MM-dd")</td>
                                <td>@booking.DateArrival.ToString("yyyy-MM-dd")</td>
                                <td>@booking.DateDeparture.ToString("yyyy-MM-dd")</td>
                                <td>@booking.Status</td>
                                <td>
                                    <a asp-area="Admin"
                                       asp-controller="BookingManagement"
                                       asp-action="Details"
                                       asp-route-id="@booking.BookingId"
                                       class="link-primary text-decoration-none"
                                       target="_blank">
                                        View Booking
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted mt-3">No bookings found for this room.</p>
            }

            <div class="mt-4 mb-5">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>