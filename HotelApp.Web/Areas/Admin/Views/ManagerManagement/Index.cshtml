@using HotelApp.Web.ViewModels.Admin.ManagerManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<ManagerManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

<div class="container mt-5">
    <h1 class="text-center mb-4 text-danger fw-bold">Front Office Manager Management</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Manager
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning">
                    <th>#</th>
                    <th>Email</th>
                    <th>Is Deleted</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var manager in Model)
                {
                    <tr>
                        <td class="align-middle">@manager.Id</td>
                        <td class="align-middle">@manager.Email</td>
                        <td class="align-middle">@manager.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@manager.Id" class="btn btn-success btn-sm fw-bold">
                                    <i class="bi bi-eye square"></i>Details
                                </a>
                                <a asp-action="ToggleDelete" asp-route-id="@manager.Id" class="btn @(manager.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold">
                                    <i class="bi @(manager.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(manager.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
