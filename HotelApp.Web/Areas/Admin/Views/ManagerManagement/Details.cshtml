@using HotelApp.Web.ViewModels.Admin.ManagerManagement
@model ManagerManagementDetailsViewModel

@{
    ViewData["Title"] = "Front Office Manager Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="fw-bold text-primary mb-3">Front Office Manager Details</h2>
            <hr />
            <p><strong>Manager ID:</strong> @Model.Id, <strong>Is Deleted:</strong> @Model.IsDeleted</p>
            <hr />
            <p><strong>User ID:</strong> @Model.UserId, <strong>Email:</strong> @Model.Email</p>
            <hr />

            <h4 class="mt-4">Managed Bookings</h4>

            @if (Model.ManagedBookings != null && Model.ManagedBookings.Any())
            {
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Created On</th>
                            <th>Arrival</th>
                            <th>Departure</th>
                            <th>Status</th>
                            <th>Room</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.ManagedBookings)
                        {
                            <tr>
                                <td>
                                    <a asp-area="Admin"
                                       asp-controller="BookingManagement"
                                       asp-action="Details"
                                       asp-route-id="@booking.Id"
                                       class="link-primary text-decoration-none"
                                       target="_blank">
                                       @booking.Id
                                    </a>
                                </td>
                                <td>@booking.DateArrival</td>
                                <td>@booking.DateDeparture</td>
                                <td>@booking.CreatedOn.ToString("yyyy-MM-dd")</td>
                                <td>@booking.Status.Name</td>
                                <td>
                                    <a asp-area="Admin"
                                       asp-controller="RoomManagement"
                                       asp-action="Details"
                                       asp-route-id="@booking.Room.Id"
                                       class="link-primary text-decoration-none"
                                       target="_blank">
                                       @booking.Room.Name
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted mt-3">No bookings assigned to this manager.</p>
            }

            <div class="mt-4 mb-5">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>


