@using HotelApp.Web.ViewModels.Admin.PaymentManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<PaymentManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning fw-bold">Payment Management</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning text-center">
                    <th>#</th>
                    <th>Created On</th>
                    <th>Family and Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td class="align-middle">@payment.Id</td>
                        <td class="align-middle">@payment.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="align-middle">@payment.PaymentUserFullName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

