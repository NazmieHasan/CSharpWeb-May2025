@using HotelApp.Web.ViewModels.Admin.PaymentManagement.Search
@model PaymentManagementSearchViewModel

@{
    ViewData["Title"] = "Search Payments";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center mb-5">
        <div class="col-sm-12 col-lg-8 col-xl-6">
            <a asp-action="Index" class="btn btn-secondary fw-bold mb-3">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            <h3 class="text-center mb-4">@ViewData["Title"]</h3>

            <form asp-controller="PaymentManagement" asp-action="SearchResult" method="get">
                <div class="mb-3">
                    <label asp-for="Search.Id" class="form-label">Payment ID</label>
                    <input asp-for="Search.Id" class="form-control" placeholder="Enter Payment ID" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.CreatedOn" class="form-label">Created On</label>
                    <input asp-for="Search.CreatedOn" class="form-control" type="date" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.PaymentUserFullName" class="form-label">Payment User Name and Family</label>
                    <input asp-for="Search.PaymentUserFullName" class="form-control" placeholder="Enter Payment User Name and Family" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.BookingId" class="form-label">Booking ID</label>
                    <input asp-for="Search.BookingId" class="form-control" placeholder="Enter Booking ID" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.PaymentMethodId" class="form-label">Select Payment Method</label>
                    <select asp-for="Search.PaymentMethodId" class="form-select"
                            asp-items="@(new SelectList(Model.Search.PaymentMethods, "Id", "Name"))">
                        <option value="">-- All --</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label asp-for="Search.IsDeleted" class="form-label">Deleted</label>
                    <select asp-for="Search.IsDeleted" class="form-select">
                        <option value="">-- All --</option>
                        <option value="false">Active</option>
                        <option value="true">Deleted</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-danger w-100 py-2 fw-bold rounded">
                    Search
                </button>
            </form>
        </div>
    </div>

    @if (Model.Results.Any())
    {
        <h4 class="mt-5 mb-5 text-center">Search Results</h4>
        <div class="table-responsive">
            <table class="table table-dark table-hover shadow-lg rounded-3">
                <thead class="thead-dark">
                    <tr class="text-warning">
                        <th>Created On</th>
                        <th>Full Name</th>
                        <th>Booking ID</th>
                        <th>Payment Method</th>
                        <th>Is Deleted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Results)
                    {
                        <tr>
                            <td class="align-middle">@p.CreatedOn.ToString("yyyy-MM-dd")</td>
                            <td class="align-middle">@p.PaymentUserFullName</td>
                            <td class="align-middle">@p.BookingId</td>
                            <td class="align-middle">@p.PaymentMethod</td>
                            <td class="align-middle">@p.IsDeleted</td>
                            <td class="align-middle">
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-success" target="_blank">
                                    <i class="bi bi-eye square"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.HasSearched)
    {
        <div class="mt-4 text-center">
            Sorry, no payments found.
        </div>
    }
</div>

