@model HotelApp.Web.ViewModels.Admin.PaymentManagement.PaymentManagementCreateViewModel

@{
    ViewData["Title"] = "Add New Payment";
}

<div class="container mt-5">
    <h2 class="text-center text-warning fw-bold">Add a New Payment</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="bg-dark text-light p-4 rounded shadow-lg">
                <!-- Hidden BookingId -->
                <input type="hidden" asp-for="BookingId" />
                
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label fw-bold">Amount</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Enter amount">
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PaymentMethodId" class="form-label-add-edit">Select Payment Method</label>
                    <select asp-for="@Model.PaymentMethodId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.PaymentMethods, "Id", "Name"))">
                        <option value="">Select Payment Method</option>
                    </select>
                    <span asp-validation-for="@Model.PaymentMethodId" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success fw-bold px-4">
                        <i class="bi bi-plus-circle"></i> Add Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}