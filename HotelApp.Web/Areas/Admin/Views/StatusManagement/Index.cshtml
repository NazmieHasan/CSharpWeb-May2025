@using HotelApp.Web.ViewModels.Admin.StatusManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<StatusManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 text-warning fw-bold">Status Management</h1>

    <div class="d-flex justify-content-between mb-5">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-area="Admin" asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Status
        </a>
    </div>

    <div class="table-responsive mt-5">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning text-center">
                    <th>#</th>
                    <th>Name</th>
                    <th>Is Deleted</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var status in Model)
                {
                    <tr>
                        <td class="align-middle">@status.Id</td>
                        <td class="align-middle">@status.Name</td>
                        <td class="align-middle">@status.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="ToggleDelete" asp-route-id="@status.Id" class="btn @(status.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold">
                                    <i class="bi @(status.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(status.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

