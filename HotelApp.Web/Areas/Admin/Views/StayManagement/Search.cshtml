@using HotelApp.Web.ViewModels.Admin.StayManagement.Search
@model StayManagementSearchViewModel

@{
    ViewData["Title"] = "Search Stays";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center mb-5">
        <div class="col-sm-12 col-lg-8 col-xl-6">
            <a asp-action="Index" class="btn btn-secondary fw-bold mb-3">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            <h3 class="text-center mb-4">@ViewData["Title"]</h3>

            <form asp-controller="StayManagement" asp-action="SearchResult" method="get">
                <div class="mb-3">
                    <label asp-for="Search.Id" class="form-label">Stay ID</label>
                    <input asp-for="Search.Id" class="form-control" placeholder="Enter Stay ID" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.CreatedOn" class="form-label">Created On</label>
                    <input asp-for="Search.CreatedOn" class="form-control" type="date" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.BookingId" class="form-label">Booking ID</label>
                    <input asp-for="Search.BookingId" class="form-control" placeholder="Enter Booking ID" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.GuestId" class="form-label">Guest ID</label>
                    <input asp-for="Search.GuestId" class="form-control" placeholder="Enter Guest ID" />
                </div>
                <div class="mb-3">
                    <label asp-for="Search.CheckoutOn" class="form-label">Checkout On</label>
                    <input asp-for="Search.CheckoutOn" class="form-control" type="date" />
                    <small class="text-muted">
                        Leave empty to show all stays
                    </small>
                </div>
                <div class="mb-4">
                    <label asp-for="Search.IsDeleted" class="form-label">Deleted</label>
                    <select asp-for="Search.IsDeleted" class="form-select">
                        <option value="">-- All --</option>
                        <option value="false">Active</option>
                        <option value="true">Deleted</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-danger w-100 py-2 fw-bold rounded">
                    Search
                </button>
            </form>
        </div>
    </div>

    @if (Model.Results.Any())
    {
        <h4 class="mt-5 mb-5 text-center">Search Results</h4>
        <div class="table-responsive">
            <table class="table table-dark table-hover shadow-lg rounded-3">
                <thead class="thead-dark">
                    <tr class="text-warning">
                        <th>Created On</th>
                        <th>Booking Id</th>
                        <th>Checkout On</th>
                        <th>Is Deleted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Results)
                    {
                        <tr>
                            <td class="align-middle">@s.CreatedOn.ToString("yyyy-MM-dd")</td>
                            <td class="align-middle">
                                <a asp-controller="BookingManagement" asp-action="Details" asp-route-id="@s.BookingId" class="text-light" target="_blank">
                                    View Booking
                                </a>
                            </td>
                            <td class="align-middle">@s.CheckoutOn</td>
                            <td class="align-middle">@s.IsDeleted</td>
                            <td class="align-middle">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-success" target="_blank">
                                    <i class="bi bi-eye square"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.HasSearched)
    {
        <div class="mt-4 text-center">
            Sorry, no stays found.
        </div>
    }
</div>