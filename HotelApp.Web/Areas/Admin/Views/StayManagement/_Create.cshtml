@model HotelApp.Web.ViewModels.Admin.StayManagement.StayManagementCreateViewModel

@{
    ViewData["Title"] = "Add New Stay";
}

<div class="container mt-2 mb-5">
    <h2 class="text-center text-danger fw-bold">Add a New Stay</h2>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form asp-action="Create" method="post" class="bg-dark text-light p-4 rounded shadow-lg">
                <!-- Hidden BookingRoomId -->
                <input type="hidden" asp-for="BookingRoomId" />

                <div class="mb-3">
                    <label asp-for="GuestEmail" class="form-label fw-bold">Guest Email</label>
                    <input asp-for="GuestEmail" type="email" class="form-control" placeholder="Enter guest email">
                    <span asp-validation-for="GuestEmail" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger fw-bold px-4">
                        <i class="bi bi-plus-circle"></i> Add Stay
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
