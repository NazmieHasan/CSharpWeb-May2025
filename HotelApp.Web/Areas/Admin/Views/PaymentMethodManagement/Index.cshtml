@using HotelApp.Web.ViewModels.Admin.PaymentMethodManagement
@using Microsoft.AspNetCore.Identity
@model IEnumerable<PaymentMethodManagementIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4 text-warning fw-bold">Payment Method Management</h1>

    <div class="d-flex justify-content-between mb-5">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-area="Admin" asp-action="Create" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New Payment Method
        </a>
    </div>

    <div class="table-responsive mt-5">
        <table class="table table-dark table-hover shadow-lg rounded-3">
            <thead class="thead-dark">
                <tr class="text-warning">
                    <th>#</th>
                    <th>Name</th>
                    <th>Is Deleted</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var paymentMethod in Model)
                {
                    <tr>
                        <td class="align-middle">@paymentMethod.Id</td>
                        <td class="align-middle">@paymentMethod.Name</td>
                        <td class="align-middle">@paymentMethod.IsDeleted</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                @if (!paymentMethod.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@paymentMethod.Id" class="btn btn-primary btn-sm fw-bold">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }
                                <a asp-action="ToggleDelete" asp-route-id="@paymentMethod.Id" class="btn @(paymentMethod.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold">
                                    <i class="bi @(paymentMethod.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                    @(paymentMethod.IsDeleted ? "Restore" : "Delete")
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>